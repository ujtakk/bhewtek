module linebuf_feat(/*AUTOARG*/);
`include "parameters.vh"
<%- load "parameters.rb" -%>

  /*AUTOINPUT*/
  input clk;
  input signed [DWIDTH-1:0] read_data;

  /*AUTOOUTPUT*/
  <%- for i in 0...$psize**2 -%>
  output signed [DWIDTH-1:0] pixel_feat<%=i%>;
  <%- end -%>

  /*AUTOWIRE*/

  /*AUTOREG*/

  <%- for y in 0...$psize -%>
  <%-   x_max = y == $psize-1 ? $psize : $pm1hei -%>
  <%-   for x in 0...x_max -%>
  reg [DWIDTH-1:0]  r_pix<%=y%>_<%=x%>;
  <%-   end -%>
  <%- end -%>

  <%- for i in 0...$psize**2 -%>
  assign pixel_feat<%=i%> = r_pix<%=i/2%>_<%=i%2%>;
  <%- end -%>

  <%- for y in 0...$psize -%>
  <%-   x_max = y == $psize-1 ? $psize : $pm1hei -%>
  <%-   for x in 0...x_max -%>
  always @(posedge clk)
    <%- if x == x_max-1 -%>
    <%-   if y == $psize-1 -%>
    r_pix<%=y%>_<%=x%> <= read_data;
    <%-   else -%>
    r_pix<%=y%>_<%=x%> <= r_pix<%=y+1%>_0;
    <%-   end -%>
    <%- else -%>
    r_pix<%=y%>_<%=x%> <= r_pix<%=y%>_<%=x+1%>;
    <%- end -%>
  <%-   end -%>
  <%- end -%>

endmodule

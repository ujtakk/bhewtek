module linebuf_pix(/*AUTOARG*/);
    `include "parameters.vh"

    /*AUTOINPUT*/
    input clk;
    input [DWIDTH-1:0] read_data;

    /*AUTOOUTPUT*/
    //<% for i in 0..24 %>
    output [DWIDTH-1:0] pixel<%=i%>;
    //<% end %>

    /*AUTOWIRE*/

    /*AUTOREG*/

    //<% for y in 0..4 %>
    //<%   x_max = y == 4 ? 4 : 11 %>
    //<%   for x in 0..x_max %>
    reg [DWIDTH-1:0]    r_pix<%=y%>_<%=x%>;
    //<%   end %>
    //<% end %>

    //<% for i in 0..24 %>
    assign pixel<%=i%> = r_pix<%=i/5%>_<%=i%5%>;
    //<% end %>

    //<% for y in 0..4 %>
    //<%   x_max = y == 4 ? 4 : 11 %>
    //<%   for x in 0..x_max %>
    always @(posedge clk)
        //<% if x == x_max %>
        //<%   if y == 4 %>
        r_pix<%=y%>_<%=x%> <= read_data;
        //<%   else %>
        r_pix<%=y%>_<%=x%> <= r_pix<%=y+1%>_0;
        //<%   end %>
        //<% else %>
        r_pix<%=y%>_<%=x%> <= r_pix<%=y%>_<%=x+1%>;
        //<% end %>
    //<%   end %>
    //<% end %>

endmodule

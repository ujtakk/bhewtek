    /*AUTOREGINPUT*/

    /*AUTOWIRE*/

    //clock
    always
    begin
        clk = 0;
        #(CLK/2);
        clk = 1;
        #(CLK/2);
    end

    integer fp;

    initial
    begin
        fp = $fopen("lbfeat.txt");
        /* <% for i in 0...3 %> */
        /* <%   for j in 0...24 %> */
        #(CLK);
        read_data = <%=24*i+j%>;
        /* <%   end %> */
        /* <% end %> */
        #(CLK);
        #(CLK);
        $finish();
    end

    always
    begin
        #(CLK/2-1);
        $fdisplay(fp, "input: %d", read_data);
        /* <% for i in 0...2 %> */
